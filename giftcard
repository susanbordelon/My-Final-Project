                    <script>
                        $(function () {
                            var formatPrice = function (value) {
                                if (!value) {
                                    return value;
                                }
                                var floatValue = 0;
                                if (typeof value === 'string') {
                                    floatValue = parseFloat(value.replace(',', ''));
                                } else if (typeof value === 'number') {
                                    floatValue = value;
                                }
                                return floatValue.toFixed(2);
                            };
                            $('#giftCard_amount').change(function () {
                                var val = $(this).val(),
                                    amount = formatPrice(val);
                                $(this).val(amount);
                                $('#preview-amount').text(amount);

                            }).attr('step', 'any').attr('min', 0);
                            $('#giftCard_to').change(function () {
                                if ($(this).val()) {
                                    $('#preview-to').show().find('.msg').text($(this).val());
                                } else {
                                    $('#preview-to').hide().find('.msg').text('');
                                }
                            });
                            $('#giftCard_from').change(function () {
                                if ($(this).val()) {
                                    $('#preview-from').show().find('.msg').text($(this).val());
                                } else {
                                    $('#preview-from').hide().find('.msg').text('');
                                }
                            });
                            $('#giftCard_message').change(function () {
                                var msg = $('#preview-message'),
                                    text = $(this).val();
                                if (text) {
                                    msg.show();
                                    msg.children().remove();
                                    msg.text('');
                                    $.each(text.split(/\n/), function (index, el) {
                                        if (el) {
                                            var d = $('<div></div>');
                                            d.text(el);
                                            msg.append(d);
                                        } else {
                                            msg.append($('<br/>'));
                                        }
                                    });
                                } else {
                                    msg.hide();
                                }
                            });
                            $("#send-to a").click(function () {
                                if ($(this).attr('href') == '#email') {
                                    $('input[name="giftCard.sendTo"]').val('EMAIL');
                                } else {
                                    $('input[name="giftCard.sendTo"]').val('PHONE');
                                }
                            });
                            $('#delivery-date select:first').change(function () {
                                if ($(this).val() == 'FUTURE_DATE') {
                                    $('#future-date').show();
                                } else {
                                    $('#future-date').hide();
                                }
                            }).selectpicker();
                            $('#delivery-date #future-date select').selectpicker({ width: '42%', dropupAuto: false });
                            $('#delivery-date :text').datepicker();
                            $('.btn-add-another').click(function () {
                                var form = $(this).closest('form');
                                form.find('[name="add"]').val(true);
                                form.submit();
                            });

                            $(':input[type=number]').on('mousewheel', function (e) { e.preventDefault() });

                        });
                    </script>

